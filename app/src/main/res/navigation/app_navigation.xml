<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="ru.art2000.pager.ui.fragments.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_chatListFragment"
            app:destination="@id/chatListFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/chatListFragment"
        android:name="ru.art2000.pager.ui.fragments.chatlist.ChatListFragment"
        android:label="chat_list_fragment"
        tools:layout="@layout/chat_list_fragment">
        <action
            android:id="@+id/action_chatListFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_chatListFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/chatListFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="ru.art2000.pager.ui.fragments.chat.ChatFragment"
        android:label="ChatFragment" >
        <action
            android:id="@+id/action_chatFragment_to_chatListFragment"
            app:destination="@id/chatListFragment" />
        <argument
            android:name="chat"
            app:argType="ru.art2000.pager.models.Chat" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="ru.art2000.pager.ui.fragments.SettingsFragment"
        android:label="SettingsFragment" >
        <action
            android:id="@+id/action_settingsFragment_to_chatListFragment"
            app:destination="@id/chatListFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_settingsFragment_to_pinCreatorFragment"
            app:destination="@id/pinCreatorFragment" />
        <argument
            android:name="pin_set"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>
    <fragment
        android:id="@+id/pinCreatorFragment"
        android:name="ru.art2000.pager.ui.fragments.PinCreatorFragment"
        android:label="PinCreatorFragment" >
        <action
            android:id="@+id/action_pinCreatorFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
</navigation>