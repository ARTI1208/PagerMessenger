<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pin_pad_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal|bottom"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pad1"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinButtonStyle"/>

        <Button
            android:id="@+id/pad2"
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinButtonStyle"/>

        <Button
            android:id="@+id/pad3"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinButtonStyle"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pad4"
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinButtonStyle"/>

        <Button
            android:id="@+id/pad5"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinButtonStyle"/>

        <Button
            android:id="@+id/pad6"
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinButtonStyle"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pad7"
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinButtonStyle"/>

        <Button
            android:id="@+id/pad8"
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinButtonStyle"/>

        <Button
            android:id="@+id/pad9"
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinButtonStyle"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/padDelete"
            android:text="DEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinButtonStyle"/>

        <Button
            android:id="@+id/pad0"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinButtonStyle"/>

        <Button
            android:id="@+id/padBiometrics"
            android:text="F"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinButtonStyle"/>

        <Button
            android:id="@+id/padOk"
            android:text="@string/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinButtonStyle"/>

    </LinearLayout>

</LinearLayout>