<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="?selectableItemBackground"
    android:layout_width="match_parent"
    android:minHeight="@dimen/chat_list_item_height"
    android:paddingHorizontal="@dimen/window_padding_horizontal"
    android:paddingVertical="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            tools:text="12345670"
            android:id="@+id/addressee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ChatItemTitle"/>

        <TextView
            tools:text="Some message"
            android:id="@+id/last_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/ChatItemLastMessage"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/item_select_check_box"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="match_parent"
        tools:visibility="visible"/>
</LinearLayout>