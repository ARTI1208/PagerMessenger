<resources>
    <!-- Base application theme. -->
    <style name="PagerAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/chat_list_divider</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="ChatItemTitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ChatItemLastMessage" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MessageTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PinButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:foreground">@null</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MessageSettingsRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:drawableStart">@null</item>
        <item name="android:background">@drawable/beautiful_compound_button_bg</item>
        <item name="android:textColor">@color/beautiful_compound_button_text_color</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MessageSettingsCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@android:color/black</item>
        <item name="android:background">@drawable/beautiful_compound_button_bg</item>
        <item name="android:textColor">@color/beautiful_compound_button_text_color</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppListItemTitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>