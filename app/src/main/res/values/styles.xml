<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/chat_list_divider</item>
    </style>

    <style name="ChatItemTitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ChatItemLastMessage" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MessageTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PinButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:foreground">@null</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>